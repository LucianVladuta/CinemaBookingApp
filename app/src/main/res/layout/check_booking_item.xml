<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_check_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    app:cardElevation="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/check_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking_number:"
                android:textColor="@android:color/holo_red_dark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/check_booking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie name:"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>





        <TextView
            android:id="@+id/check_booking_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema Name:"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/check_booking_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/check_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Showing Date:"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/check_booking_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:text="Seats Count: "/>

        <TextView
            android:id="@+id/check_booking_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:text="Confirmed status:"/>



    </LinearLayout>


</androidx.cardview.widget.CardView>